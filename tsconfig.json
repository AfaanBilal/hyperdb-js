{
  "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "lib": ["ES2016", "DOM"],
      "skipLibCheck": true,
      "baseUrl": "./",
  },
  "include": [
      "./src/**/*"
  ],
}
